{
  "trailingComma": "all",
  "printWidth": 120,
  "singleQuote": true,
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": { "parser": "lwc" }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": { "parser": "html" }
    },
    {
      "files": "*.xml",
      "options": { "parser": "xml", "xmlWhitespaceSensitivity": "ignore" }
    }
  ]
}
